<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity"
    android:padding="20dp">

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/shoppingCart"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/shop_buttons"
        android:text="Scan iTEM"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonScan"
        android:layout_alignEnd="@+id/shoppingCart"
        android:background="@drawable/shop_buttons"
        android:text="PROCEED TO PAY"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/shoppingCart"
        android:layout_width="359dp"
        android:layout_height="316dp"
        android:layout_centerInParent="true"
        android:scrollbarAlwaysDrawHorizontalTrack="false" >

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="373dp"
        android:layout_height="51dp"
        android:layout_above="@+id/shoppingCart"
        android:layout_marginBottom="17dp"
        android:text="Shopping Cart"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="359dp"
        android:layout_height="32dp"
        android:layout_below="@+id/shoppingCart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:text="TOTAL:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="124dp"
        android:layout_above="@+id/tvBalance"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_logo" />
</RelativeLayout>